<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="DemoQA Test Suite" parallel="classes" thread-count="3">

    <test name="Sauce Demo Tests">
        <classes>
            <class name="saucedemo.tests.login.LoginTests"/>
            <class name="saucedemo.tests.products.ProductTests"/>
        </classes>
    </test>

    <test name="Elements Tests">
        <classes>
            <class name="demoqa.elements.LinkTests"/>
            <class name="demoqa.elements.WebTableTests"/>
        </classes>
    </test>

    <test name="Dynamic Wait">
        <classes>
            <class name="demoqa.dynamic_wait.DynamicWaitTests"/>
        </classes>
    </test>

    <test name="Forms">
        <classes>
            <class name="demoqa.forms.CheckBoxTests"/>
            <class name="demoqa.forms.RadioButtonTests"/>
        </classes>
    </test>

    <test name="Widgets Tests">
        <classes>
            <class name="demoqa.widgets.DateTests"/>
            <class name="demoqa.widgets.SelectDropDownTests"/>
        </classes>
    </test>

    <test name="Alerts Tests">
        <classes>
            <class name="demoqa.alerts.AlertsTests"/>
        </classes>
    </test>

</suite>