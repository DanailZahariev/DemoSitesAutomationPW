<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="DemoQA Test Suite" parallel="classes" thread-count="3">

    <listeners>
        <listener class-name="listeners.CustomTestListener"/>
    </listeners>

    <test name="Sauce Demo Tests">
        <classes>
            <class name="saucedemo.tests.login.LoginTests"/>
            <class name="saucedemo.tests.products.ProductTests"/>
        </classes>
    </test>

    <test name="Elements Tests">
        <classes>
            <class name="demoqa.elements.LinkTests"/>
            <class name="demoqa.elements.WebTableTests"/>
            <class name="demoqa.elements.UploadDownloadTests"/>
            <class name="demoqa.elements.ButtonTests"/>
        </classes>
    </test>

    <test name="Dynamic Wait">
        <classes>
            <class name="demoqa.dynamic_wait.DynamicWaitTests"/>
        </classes>
    </test>

    <test name="Forms">
        <classes>
            <class name="demoqa.forms.CheckBoxTests"/>
            <class name="demoqa.forms.RadioButtonTests"/>
        </classes>
    </test>

    <test name="Widgets Tests">
        <classes>
            <class name="demoqa.widgets.DateTests"/>
            <class name="demoqa.widgets.SelectDropDownTests"/>
            <class name="demoqa.widgets.AutoCompleteTests"/>
        </classes>
    </test>

    <test name="Alerts Tests">
        <classes>
            <class name="demoqa.alerts.AlertsTests"/>
        </classes>
    </test>

    <test name="Interactions Tests">
        <classes>
            <class name="demoqa.interactions.KeyboardTests"/>
            <class name="demoqa.interactions.SliderTests"/>
            <class name="demoqa.interactions.DroppableTests"/>
        </classes>
    </test>

    <test name="Modal Tests">
        <classes>
            <class name="demoqa.modals.ModalTests"/>
        </classes>
    </test>

    <test name="iFrame Tests">
        <classes>
            <class name="demoqa.frames.FrameTests"/>
        </classes>
    </test>

    <test name="Windows Tests">
        <classes>
            <class name="demoqa.windows.WindowsTests"/>
        </classes>
    </test>

</suite>